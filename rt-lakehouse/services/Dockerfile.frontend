FROM node:18-alpine

WORKDIR /app

# Copy package files from the frontend directory
COPY rt-lakehouse/services/frontend/package.json ./

# Install all dependencies (including dev dependencies needed for build)
RUN npm install

# Copy frontend code
COPY rt-lakehouse/services/frontend/ ./

# Build the app
RUN npm run build

# Install serve to serve static files
RUN npm install -g serve

# Serve the app
EXPOSE 3000
CMD ["serve", "-s", "build", "-l", "3000"]
