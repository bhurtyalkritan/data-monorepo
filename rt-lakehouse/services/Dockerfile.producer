FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python packages
COPY services/requirements-producer.txt .
RUN pip install --no-cache-dir -r requirements-producer.txt

# Copy producer code
COPY producers/kafka_event_producer.py ./kafka_event_producer.py
COPY pipelines/00_config.py ./config.py

# Run producer
CMD ["python", "kafka_event_producer.py"]
